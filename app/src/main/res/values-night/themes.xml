<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bjut" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bjut_blue</item>
        <item name="colorPrimaryVariant">@color/bjut_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bjut_blue</item>
        <!-- Customize your theme here. -->
        <item name="header_background">@color/header_background_dark</item>
        <item name="cell_background">@color/cell_background_dark</item>
        <item name="textColor">@color/white</item>

        <item name="sentMessageBackgroundColor">@color/sent_message_bg_dark</item>
        <item name="sentMessageTextColor">@color/sent_message_text_dark</item>
        <item name="receivedMessageBackgroundColor">@color/received_message_bg_dark</item>
        <item name="receivedMessageTextColor">@color/received_message_text_dark</item>
    </style>

    <style name="Theme.Bjut.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

</resources>